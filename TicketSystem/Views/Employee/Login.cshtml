@model TicketSystem.Models.LoginModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<head>
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>
</head> 
<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-4 main-box-apa">
            <h2 class="text-center mt-4">Iniciar Sesión</h2>
            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control input-apa" placeholder="Correo electrónico"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" class="form-control input-apa" placeholder="Contraseña"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="button-login-apa">Iniciar Sesión</button>
            </form>
        </div>
    </div>
</div>