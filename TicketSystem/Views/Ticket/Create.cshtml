@model TicketCreateViewModel
@{
    ViewData["Title"] = "Crear Ticket";
}

<div class="container-fluid">
    <div class="row">
        <div class="offset-md-1" style="margin-top: 5%;">
            <h2 class="mt-4 mb-4">Nuevo Ticket</h2>
            <div class="mt-2 bg-white p-4">
                <h3>Crear nuevo ticket</h3>
                <h6 class="mt-1 mb-4 text-secondary">Escribe y registra nuevas solicitudes.</h6>
                <form asp-action="Create" method="post" class="row">
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Titulo</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Date" class="control-label">Fecha</label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedPriorityID" class="control-label">Prioridad</label>
                            <select asp-for="SelectedPriorityID" asp-items="Model.Priorities"
                                class="form-select"></select>
                            <span asp-validation-for="SelectedPriorityID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedRequestTypeID" class="control-label">Tipo de Solicitud</label>
                            <select asp-for="SelectedRequestTypeID" asp-items="Model.RequestTypes"
                                class="form-select"></select>
                            <span asp-validation-for="SelectedRequestTypeID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedCasinoGameID" class="control-label">Juego</label>
                            <select asp-for="SelectedCasinoGameID" asp-items="Model.Games"
                                class="form-select"></select>
                            <span asp-validation-for="SelectedCasinoGameID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedEngineerID" class="control-label">Asignado a</label>
                            <select asp-for="SelectedEngineerID" asp-items="Model.Engineers"
                                class="form-select"></select>
                            <span asp-validation-for="SelectedEngineerID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Descripcion</label>
                            <textarea asp-for="Description" class="form-control" style="height: 150px;"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
