@model TicketEditViewModel
@{
    ViewData["Title"] = "Editar Ticket";
}
<div class="container-fluid">
    <div class="row">
        <div class="" style="margin-top: 5%;">
            <h2 class="mt-4 mb-4">Editar Ticket</h2>
            <div class="mt-2 bg-white p-4">
                <h3>Edita ticket</h3>
                <h6 class="mt-1 mb-4 text-secondary">Cambia los datos solicitados.</h6>
                <form asp-action="Edit" asp-route-id="@Model.TicketID" method="post" class="row">
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Titulo</label>
                            <input asp-for="Title" class="form-control" required/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedPriorityID" class="control-label">Prioridad</label>
                            <select asp-for="SelectedPriorityID" asp-items="Model.Priorities" class="form-select" required>
                            </select>
                            <span asp-validation-for="SelectedPriorityID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedStatusID" class="control-label">Estado del Ticket</label>
                            <select asp-for="SelectedStatusID" asp-items="Model.Statuses"
                                class="form-select" required></select>
                            <span asp-validation-for="SelectedStatusID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedRequestTypeID" class="control-label">Tipo de Solicitud</label>
                            <select asp-for="SelectedRequestTypeID" asp-items="Model.RequestTypes"
                                class="form-select" required></select>
                            <span asp-validation-for="SelectedRequestTypeID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedCasinoGameID" class="control-label">Juego</label>
                            <select asp-for="SelectedCasinoGameID" asp-items="Model.Games" class="form-select" required></select>
                            <span asp-validation-for="SelectedCasinoGameID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="form-group">
                            <label asp-for="SelectedEngineerID" class="control-label">Asignado a</label>
                            <select asp-for="SelectedEngineerID" asp-items="Model.Engineers"
                                class="form-select" required></select>
                            <span asp-validation-for="SelectedEngineerID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Descripcion</label>
                            <textarea asp-for="Description" class="form-control" style="height: 150px;"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3 d-md-flex justify-content-md-end">
                        <button type="submit" class="mx-2 btn btn-primary"  style="background-color: #7F56D8; border-color: #7F56D8;">Guardar</button>
                        <a asp-action="Index" class="mx-2 btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>